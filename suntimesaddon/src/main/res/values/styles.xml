<resources>

    <!-- Dark Theme -->
    <style name="SuntimesAddonTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="colorAction">@color/colorAction_dark</item>
        <item name="colorDisabled">@color/colorDisabled_dark</item>

        <item name="suntimesCardBackground">@color/card_dark</item>
        <item name="dialogFrame">@color/grey_800</item>
        <item name="dialogBackground">@color/dialog_dark</item>
        <item name="dialogBackgroundAlt">@color/grey_900</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="actionBarPopupTheme">@style/PopupMenuStyleDark</item>
        <item name="fab_backgroundColor">@color/fab_background_dark</item>
        <item name="fab_rippleColor">@color/fab_ripple_dark</item>

        <item name="snackbar_textColor">@android:color/primary_text_dark</item>
        <item name="snackbar_accentColor">?colorAccent</item>
        <item name="snackbar_backgroundColor">?attr/colorPrimary</item>

        <item name="chipBackground">@drawable/chip_dark</item>
        <item name="chipTrayBackground">@drawable/chip_tray_dark</item>

        <item name="sunriseColor">@color/sun_rising_dark</item>
        <item name="sunsetColor">@color/sun_setting_dark</item>

        <item name="noonColor">@color/sun_noon_dark</item>
        <item name="noonBorderColor">@color/sun_noon_border_dark</item>
        <item name="noonIcon">@drawable/ic_noon_dark</item>

        <item name="moonriseColor">@color/moon_rising_dark</item>
        <item name="moonsetColor">@color/moon_setting_dark</item>

        <item name="sunriseIconSmall">@drawable/ic_sunrise_dark</item>
        <item name="sunsetIconSmall">@drawable/ic_sunset_dark</item>
        <item name="moonriseIconSmall">@drawable/ic_moonrise_dark</item>
        <item name="moonsetIconSmall">@drawable/ic_moonset_dark</item>
    </style>

    <!-- Light Theme -->
    <style name="SuntimesAddonTheme.Light" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="colorAction">@color/colorAction_light</item>
        <item name="colorDisabled">@color/colorDisabled_light</item>

        <item name="suntimesCardBackground">@color/card_light</item>
        <item name="dialogFrame">@android:color/white</item>
        <item name="dialogBackground">@color/dialog_light</item>
        <item name="dialogBackgroundAlt">@color/grey_300</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/PopupMenuStyleLight</item>
        <item name="fab_backgroundColor">@color/fab_background_light</item>
        <item name="fab_rippleColor">@color/fab_ripple_light</item>

        <item name="snackbar_textColor">@android:color/primary_text_light</item>
        <item name="snackbar_accentColor">?colorAccent</item>
        <item name="snackbar_backgroundColor">?attr/colorPrimary</item>

        <item name="chipBackground">@drawable/chip_light</item>
        <item name="chipTrayBackground">@drawable/chip_tray_light</item>

        <item name="sunriseColor">@color/sun_rising_light</item>
        <item name="sunsetColor">@color/sun_setting_light</item>

        <item name="noonColor">@color/sun_noon_light</item>
        <item name="noonBorderColor">@color/sun_noon_border_light</item>
        <item name="noonIcon">@drawable/ic_noon_light</item>

        <item name="moonriseColor">@color/moon_rising_light</item>
        <item name="moonsetColor">@color/moon_setting_light</item>

        <item name="sunriseIconSmall">@drawable/ic_sunrise_light</item>
        <item name="sunsetIconSmall">@drawable/ic_sunset_light</item>
        <item name="moonriseIconSmall">@drawable/ic_moonrise_light</item>
        <item name="moonsetIconSmall">@drawable/ic_moonset_light</item>
    </style>

    <style name="PopupMenuStyleLight" parent="Theme.AppCompat.Light" />
    <style name="PopupMenuStyleDark" parent="Theme.AppCompat" />

    <style name="ActionButton" parent="@android:style/Widget.Button.Small" />

    <style name="SunIconImageView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/sunIcon_width</item>
        <item name="android:layout_height">@dimen/sunIcon_height</item>
    </style>

    <style name="SuntimesCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/suntimesCardBackground</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Chip Based UI -->
    <style name="ChipTray">
        <item name="android:background">?attr/chipTrayBackground</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="ChipArea">
        <item name="android:maxWidth">250dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">?attr/chipBackground</item>
    </style>

    <style name="ChipTextBase" parent="android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ChipText0" parent="ChipTextBase">
        <item name="android:maxWidth">250dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ChipText" parent="ChipText0">
        <item name="android:background">?attr/chipBackground</item>
    </style>
    <style name="ChipText1" parent="ChipText0">
        <item name="android:background">?attr/chipBackground</item>
        <item name="android:drawableRight">@drawable/ic_transparent</item>
    </style>

</resources>
